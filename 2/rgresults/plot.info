#!/usr/bin/gnuplot
set termoption enhanced
set terminal svg size 800,600 font "Arial, 16"
set output "plot.svg"
set style line 1 lc rgb "0xDC143C" lt 1 lw 1.65 pt 1 ps 1
set style line 2 lc rgb "0x6495ED" lt 1 lw 1.65 pt 1 ps 1
set style line 3 lc rgb "0x67787B" lt 1 lw 1.65 pt 1 ps 1
set border lw 2
set grid
set key top left

set xlabel "Number of processes"
set ylabel "Speedup" rotate by 90

set xtics 2
set ytics 1
set mxtics

set format x "%g"
set format y "%.3f"

plot "res.dat" using 1:4 title "linear speedup" with linespoints ls 1, \
"res.dat" using 1:2 title "one node" with linespoints ls 2, \
"res.dat" using 1:3 title "two nodes" with linespoints ls 3